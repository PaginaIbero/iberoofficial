generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Cronologia {
  id          Int      @id @unique
  ciudad      String
  cortes      Int[]
}

model Resultados {
  id  String @id @default(uuid())
  nombreCompleto String
  date  Int
  puntaje Int[]
  ranking Int
  medalla Medalla
}

enum Medalla {
  ORO
  PLATA
  BRONCE
  MENCION
  NADA
}
