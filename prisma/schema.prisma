generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Cronologia {
  id            Int     @id @unique
  ciudad        String  @default("n/a")
  pais          String  @default("n/a")
  fecha         String  @default("n/a")
  paises        Int     @default(0)
  participantes Int     @default(0)
  hombres       Int     @default(0)
  mujeres       Int     @default(0)
  cortes        Int[]   @default([0, 0, 0])
  premios       Int[]   @default([0, 0, 0, 0])
}

model Resultados {
  id              String  @id @default(uuid())
  nombreCompleto  String
  date            Int
  P1             Int
  P2             Int
  P3             Int
  P4             Int
  P5             Int
  P6             Int
  ranking         Int
  medalla         Medalla
  pais            String
  numeracion      Int
}

enum Medalla {
  ORO
  PLATA
  BRONCE
  MENCION
  NADA
}

